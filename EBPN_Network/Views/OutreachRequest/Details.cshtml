@model EBPN_Network.Models.OutreachRequest

@{
    ViewData["Title"] = "Outreach Request Details";
}

<h2>@Model.Title</h2>

<p><strong>Category:</strong> @Model.Category</p>
<p><strong>Description:</strong> @Model.Description</p>
<p><strong>Post Language:</strong> @Model.PostLanguage</p>
<p><strong>Response Language:</strong> @Model.ResponseLanguage</p>
<p><strong>Country:</strong> @Model.Country</p>
<p><strong>Fulfilled:</strong> @(Model.Fulfilled ? "Yes" : "No")</p>
<p><strong>Created Date:</strong> @Model.CreatedDate.ToString("yyyy-MM-dd")</p>
<p><strong>Updated Date:</strong> @Model.UpdatedDate.ToString("yyyy-MM-dd")</p>
<p><strong>Email:</strong> @(Model.Email ?? "N/A")</p>
<p><strong>WhatsApp:</strong> @(Model.WhatsApp ?? "N/A")</p>
<p><strong>Flagged:</strong> @(Model.Flagged ? "Yes" : "No")</p>
<p><strong>Disclaimer:</strong> @(Model.Disclaimer ? "Yes" : "No")</p>

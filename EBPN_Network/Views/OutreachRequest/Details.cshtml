@model EBPN_Network.Models.OutreachRequest

@{
    ViewData["Title"] = "Outreach Request Details";
}

<h2>@Model.Title</h2>
<p>@Model.Description</p>

<h3>Comments</h3>

@await Html.PartialAsync("_CommentList", Model.Comments)

<h3>Add a Comment</h3>

@await Html.PartialAsync("_AddCommentForm", new EBPN_Network.Models.Comment { RequestID = Model.RequestID })

@model EBPN_Network.Models.OutreachRequest

<h2>Create a Post</h2>

<form asp-controller="OutreachRequest" asp-action="Create" method="post">
    <div class="form-group">
        <label for="Category">Select Category</label>
        <select asp-for="Category" class="form-control">
            <optgroup label="Wanted">
                <option value="Wanted: Outreach Teams">Outreach Teams</option>
                <option value="Wanted: SD Cards">SD Cards</option>
                <option value="Wanted: Bibles (Print)">Bibles (Print)</option>
                <option value="Wanted: Translation">Translation</option>
                <option value="Wanted: Training">Training</option>
                <option value="Wanted: Teachers">Teachers</option>
                <option value="Wanted: Connections">Connections</option>
                <option value="Wanted: Housing">Housing</option>
            </optgroup>
            <optgroup label="Offered">
                <option value="Offered: Outreach Teams">Outreach Teams</option>
                <option value="Offered: SD Cards">SD Cards</option>
                <option value="Offered: Training">Training</option>
                <option value="Offered: Teachers">Teachers</option>
                <option value="Offered: Housing">Housing</option>
            </optgroup>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Country"></label>
        <input asp-for="Country" class="form-control" />
        <span asp-validation-for="Country" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PostLanguage"></label>
        <select asp-for="PostLanguage" class="form-control" data-bs-toggle="dropdown">
            <option value="">-- Select Post Language --</option>
            <option value="English">English</option>
            <option value="Spanish">Spanish</option>
            <option value="French">French</option>
            <option value="Chinese">Chinese</option>
            <option value="Arabic">Arabic</option>
            <option value="Hindi">Hindi</option>
            <option value="Portuguese">Portuguese</option>
            <option value="Russian">Russian</option>
            <option value="German">German</option>
            <option value="Japanese">Japanese</option>
        </select>
        <span asp-validation-for="PostLanguage" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="ResponseLanguage"></label>
        <select asp-for="ResponseLanguage" class="form-control" data-bs-toggle="dropdown">
            <option value="">-- Select Post Language --</option>
            <option value="English">English</option>
            <option value="Spanish">Spanish</option>
            <option value="French">French</option>
            <option value="Chinese">Chinese</option>
            <option value="Arabic">Arabic</option>
            <option value="Hindi">Hindi</option>
            <option value="Portuguese">Portuguese</option>
            <option value="Russian">Russian</option>
            <option value="German">German</option>
            <option value="Japanese">Japanese</option>
        </select>
        <span asp-validation-for="ResponseLanguage" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
